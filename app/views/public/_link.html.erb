<div class="col-2 border-right border-bottom border-dark" style="background-color: #F5F5F5;">
  <div class="row justify-content-md-center py-3 box">
    <%= form_with url: fishing_successes_path, method: :get do |f| %>
      <div class="col">
        魚種から探す
      </div>
      <div class="col mt-2">
        <%= select_tag :tag_id, options_from_collection_for_select(Tag.all, :id, :name, params[:tag_id]), {prompt: '---'} %>
      </div>
      <div class="col text-right mt-2">
        <%= f.submit '検索' %>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-md-center py-3 box">
    <%= form_with url: fishing_successes_path, method: :get do |f| %>
      <div class="col">
        都道府県から探す
      </div>
      <div class="col mt-2">
        <%= f.select :fishing_spot, FishingSuccess.fishing_spots.keys.map {|k| [k, k]}, {include_blank: "---"}, {} %>
      </div>
      <div class="col text-right mt-2">
        <%= f.submit '検索' %>
      </div>
    <% end %>
  </div>
  <div class="row justify-content-md-center py-3">
      <div class="col mx-3">
        <%= link_to fishing_successes_path, class: "btn btn-warning btn-block" do %>
          投稿一覧
        <% end %>
      </div>
  </div>
  <div class="row justify-content-center py-3">
      <div class="col mx-3">
        <%= link_to new_fishing_success_path, data: {"turbolinks" => false}, class: " btn btn-warning btn-block" do %>
          釣果投稿
        <% end %>
      </div>
  </div>
  <div class="row justify-content-md-center py-3">
      <div class="col mx-3">
        <%= link_to anglers_mypage_path, class: "btn btn-warning btn-block" do %>
          マイページ
        <% end %>
      </div>
  </div>
  <div class="row justify-content-md-center py-3">
      <div class="col mx-3">
        <%= link_to anglers_favorites_path, class: "btn btn-warning btn-block" do %>
          いいね一覧
        <% end %>
      </div>
  </div>
  <div class="row justify-content-md-center py-3">
      <div class="col mx-3">
        <%= link_to anglers_fishing_successes_path, class: "btn btn-warning btn-block" do %>
          投稿履歴
        <% end %>
      </div>
  </div>
</div>