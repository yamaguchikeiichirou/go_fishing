<div class="container">
  <div class="row my-4">
    <div class="col text-center mt-3 fs-4">
      コメント一覧
    </div>
  </div>
  <div class="row justify-content-center mx-5">
    <div class="col-10">
      <table class="table table-hover table-inverse" width="100%">
        <thead class="table-secondary">
          <tr>
            <th>日時</th>
            <th>氏名</th>
            <th>コメント</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @comments.each do |comment| %>
            <tr>
              <td>
                <%= comment.created_at.strftime("%m月%d日") %>
              </td>
              <td>
                <%= link_to admin_angler_path(comment.angler), class: "text-dark" do %>
                  <%= comment.angler.name %>
                <% end %>
              </td>
              <td>
                <%= truncate(comment.content, :length => 28) %>
              </td>
              <td>
                <%= link_to "削除",admin_comment_path(comment), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "btn btn-danger btn-sm fs-5" %>
              </td>
            </tr>
          <% end %>
        <tbody>
      </table>
    </div>
  </div>
  <div class="row justify-content-md-center">
    <div class="col-auto">
      <%= paginate @comments %>
    </div>
  </div>
</div>