    <% if angler_signed_in? %>
      <header>
        <nav class="navbar navbar-expand-lg navbar-light border-bottom border-dark" style="background-color: #FFCC99;">
          <div class="container-fluid">
            <div clas="col-auto bg-light border">
              <%= link_to root_path, class: "navbar-brand" do %>
                <%= image_tag src="rogo3.jpg", size: "200x150" %>
              <% end %>
            </div>
            <div clas="col">
              <div class="row">
                <div class="col text-center pb-4">
                  ようこそ、<%= current_angler.name %>！
                </div>
              </div>
              <div class="row">
                <div class="col text-center">
                  <%= form_with model: FishingSuccess, url: search_path, method: :get, local: true do |f| %>
                    <%= f.text_field :keyword, value: @keyword, style: "width: 300px" %>
                    <%= f.submit "検索" %>
                  <% end %>
                </div>
              </div>
            </div>
            <div clas="col-auto">
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                  <li class="pl-3">
                    <%= link_to destroy_angler_session_path, method: :delete, class: "nav-link text-dark rounded border border-danger", style: "background-color: #FA6800;" do %>
                      ログアウト
                    <% end %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </nav>
      </header>
    <% else %>
      <header>
        <nav class="navbar navbar-expand-lg navbar-light border-bottom border-dark" style="background-color: #FFCC99;">
          <div class="container-fluid pt-4 pb-4">
            <a class="navbar-brand">
              <span class="text-dark pt-2 pb-2 pl-4 pr-4 rounded">logo</span>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                <li class="pr-3 pl-3">
                  <%= link_to new_angler_registration_path,class: "nav-link text-dark rounded border border-danger", style: "background-color: #FA6800;" do %>
                    新規登録
                  <% end %>
                </li>
                <li class="pl-3">
                  <%= link_to new_angler_session_path,class: "nav-link text-dark rounded border border-danger", style: "background-color: #FA6800;" do %>
                    ログイン
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      </header>
    <% end %>
