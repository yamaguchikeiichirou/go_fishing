
<body>
    <% if angler_signed_in? %>
      <header>
        <nav class="navbar navbar-expand-lg navbar-light border-bottom border-dark" style="background-color: #FFCC99;">
          <div class="container-fluid pt-4 pb-4">
            <div clas="col-5 bg-light p-5 border">
              <a class="navbar-brand" href="/">
                <span class="text-dark pt-2 pb-2 pl-4 pr-4">rogo</span>
              </a>
            </div>
            <div clas="col-2">
              <span>ようこそ、<%= current_angler.name %>！</span>
            </div>
            <div clas="col-auto">
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                  <li class="pr-3">
                    <%= link_to new_fishing_success_path,class: "nav-link text-dark rounded border border-danger", style: "background-color: #FA6800;" do %>
                      釣果投稿
                    <% end %>
                  </li>
                  <li class="pr-3 pl-3">
                    <%= link_to angler_path(current_angler),class: "nav-link text-dark rounded border border-danger", style: "background-color: #FA6800;" do %>
                      マイページ
                    <% end %>
                  </li>
                  <li class="pr-3 pl-3">
                    <%= link_to angler_path(current_angler),class: "nav-link text-dark rounded border border-danger", style: "background-color: #FA6800;" do %>
                      お気に入り
                    <% end %>
                  </li>
                  <li class="pl-3">
                    <%= link_to destroy_angler_session_path, method: :delete,class: "nav-link text-dark rounded border border-danger", style: "background-color: #FA6800;" do %>
                      ログアウト
                    <% end %>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </nav>
      </header>
    <% else %>
      <header>
        <nav class="navbar navbar-expand-lg navbar-light border-bottom border-dark" style="background-color: #FFCC99;">
          <div class="container-fluid pt-4 pb-4">
            <a class="navbar-brand">
              <span class="text-dark pt-2 pb-2 pl-4 pr-4 rounded">logo</span>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                <li class="pr-3 pl-3">
                  <%= link_to new_angler_registration_path,class: "nav-link text-dark rounded border border-danger", style: "background-color: #FA6800;" do %>
                    新規登録
                  <% end %>
                </li>
                <li class="pl-3">
                  <%= link_to new_angler_session_path,class: "nav-link text-dark rounded border border-danger", style: "background-color: #FA6800;" do %>
                    ログイン
                  <% end %>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      </header>
    <% end %>
  </body>
